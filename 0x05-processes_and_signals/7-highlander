#!/usr/bin/env bash
# A Bash script that prints a message indefinitely and handles SIGTERM

# Function to handle SIGTERM
term_handler() {
    echo "I am invincible!!!"
}

# Trap SIGTERM and call term_handler
trap term_handler SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond indefinitely."
    sleep 2
done
