#!/usr/bin/env bash
# A Bash script that kills the 7-highlander process using SIGTERM (or SIGKILL)
# This script checks if the process exists and kills it safely
PID=$(pgrep -f '7-highlander')
if [ -n "$PID" ]; then
  kill "$PID"  # use `kill -9` if you really need SIGKILL
  echo "Process $PID stopped"
else
  echo "Process not found"
fi
