#!/usr/bin/env bash
# A Bash script that stops the 7-highlander process

# Get the PID of the 7-highlander process
pid=$(pgrep -f 7-highlander)

# Check if the process is running
if [ -n "$pid" ]; then
    echo "Sending SIGTERM to 7-highlander (PID $pid)..."
    kill "$pid"
else
    echo "7-highlander is not running."
fi
